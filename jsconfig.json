{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "test-utils/unit": ["./config/test/jest/test-utils"],
            "@config/*": ["./config/*"],
            "@config": ["./config"],
            "@sb-constants": ["./config/storybook/constants.js"],
            "@client/*": ["./src/client/*"],
            "@server/*": ["./src/server/*"],
            "@common/*": ["./src/common/*"],
            "@utils/*": ["./src/common/utils/*"],
            "@utils": ["./src/common/utils"],
            "@services/*": ["./src/common/services/*"],
            "@services": ["./src/common/services"],
            "@api/*": ["./src/client/api/*"],
            "@api": ["./src/client/api"],
            "@components/*":  ["./src/client/components/*"],
            "@pages/*": ["./src/client/components/pages/*"],
            "@base/*": ["./src/client/components/base/*"],
            "@reusables/*": ["./src/client/reusables/*"],
            "@slices/*": ["./src/client/store/slices/*"],
        }
    },
    "include": ["src/**/*", "config/**/*/*"]
}
