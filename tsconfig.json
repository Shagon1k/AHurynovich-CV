{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "dist",
        "module": "es2022",
        "target": "esnext",
        "strict": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "nodenext",
        "isolatedModules": true,
        /**
         * Note: do NOT emit (TS->JS) as Babel handles transpiling.
         * "noEmitOnError" usage is redundant in that case as it is used to disable emit on type-checking fail.
         */
        "noEmit": true,
        "skipLibCheck": true,
        "paths": {
            "@config/*": ["./config/*"],
            "@config": ["./config"],
            "@sb-constants": ["./config/storybook/constants.js"],
            "@src/*": ["./src"],
            "@utils/*": ["./src/utils/*"],
            "@utils": ["./src/utils"],
            "@services/*": ["./src/services/*"],
            "@services": ["./src/services"],
            "@api/*": ["./src/api/*"],
            "@api": ["./src/api"],
            "@assets/*": ["./src/assets/*"],
            "@components/*":  ["./src/components/*"],
            "@pages/*": ["./src/components/pages/*"],
            "@base/*": ["./src/components/base/*"],
            "@common/*": ["./src/components/common/*"],
            "@reusables/*": ["./src/reusables/*"],
            "@slices/*": ["./src/store/slices/*"],
            "@test-utils": ["./config/test/jest/test-utils"],
            "@test-utils/*": ["./config/test/jest/test-utils/*"]
        },
    },
    "include": ["src/**/*", "config/**/*/*"],
    "exclude": ["node_modules", "dist/**/*"]
}
